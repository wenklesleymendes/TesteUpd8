@model IEnumerable<Domino.Entities.Cliente>

@{
    ViewData["Title"] = "Consulta Cliente";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .card-header.inverted {
            background-color: white;
            color: #007bff; /* Bootstrap primary color */
        }

            .card-header.inverted h2 {
                margin: 0;
            }

        .header-logo {
            width: 50px;
            height: auto;
        }

        .search-form .form-group {
            margin-bottom: 1rem;
        }

        .card-header h3 {
            margin: 0;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header inverted d-flex align-items-center">
                <img src="~/images/logo.png" alt="Logo" class="header-logo mr-2">
                <h2 class="mb-0">Consulta Cliente</h2>
            </div>
            <div class="card-body">
                <form method="get" class="search-form">
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="cpf">CPF:</label>
                            <input type="text" class="form-control" id="cpf" name="Cpf">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="nome">Nome:</label>
                            <input type="text" class="form-control" id="nome" name="Nome">
                        </div>
                        <div class="form-group col-md-3">
                            <label for="dataNascimento">Data Nascimento:</label>
                            <input type="date" class="form-control" id="dataNascimento" name="DataNascimento">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>Sexo:</label>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="masculino" name="Sexo" value="M">
                                <label class="form-check-label" for="masculino">Masculino</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="feminino" name="Sexo" value="F">
                                <label class="form-check-label" for="feminino">Feminino</label>
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="estado">Estado:</label>
                            <select class="form-control" id="estado" name="Estado">
                                <option>Todos</option>
                                <option value="SP">SP</option>
                                <option value="RJ">RJ</option>
                                <!-- Adicione mais opções conforme necessário -->
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="cidade">Cidade:</label>
                            <select class="form-control" id="cidade" name="Cidade">
                                <option>Todos</option>
                                <!-- Adicione mais opções conforme necessário -->
                            </select>
                        </div>
                        <div class="form-group col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary btn-block mr-2">Pesquisar</button>
                            <button type="reset" class="btn btn-secondary btn-block">Limpar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mt-4">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mt-4">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="card mt-4">
            <div class="card-header bg-info text-white">
                <h3>Resultado da Pesquisa</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Ações</th>
                            <th>Cliente</th>
                            <th>CPF</th>
                            <th>Data Nasc.</th>
                            <th>Estado</th>
                            <th>Cidade</th>
                            <th>Sexo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cliente in Model)
                        {
                            <tr>
                                <td>
                                    <form asp-action="Delete" method="post" style="display:inline">
                                        <input type="hidden" name="id" value="@cliente.Id">
                                        <input type="hidden" name="endereco" value="@cliente.Endereco">
                                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                                    </form>
                                    <button type="button" class="btn btn-success btn-sm editClientBtn" data-id="@cliente.Id" data-nome="@cliente.Nome" data-cpf="@cliente.Cpf" data-datanascimento="@cliente.DataNascimento.ToString("yyyy-MM-dd")" data-endereco="@cliente.Endereco" data-estado="@cliente.Estado" data-cidade="@cliente.Cidade" data-sexo="@cliente.Sexo" onclick="openEditModal(this)">Editar</button>
                                </td>
                                <td>@cliente.Nome</td>
                                <td>@cliente.Cpf</td>
                                <td>@cliente.DataNascimento.ToString("dd/MM/yyyy")</td>
                                <td>@cliente.Estado</td>
                                <td>@cliente.Cidade</td>
                                <td>@cliente.Sexo</td>
                                <td style="display:none;">@cliente.Endereco</td> <!-- Campo escondido -->
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Paginação (se necessário) -->
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Anterior</a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Próximo</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    @Html.Partial("~/Views/cliente/editacliente-modal.cshtml")

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Cliente/consulta-cliente.js"></script> <!-- Referência ao arquivo JS -->

    <script>
        function openEditModal(button) {
            var clienteId = $(button).data('id');
            var nome = $(button).data('nome');
            var cpf = $(button).data('cpf');
            var dataNascimento = $(button).data('datanascimento');
            var endereco = $(button).data('endereco');
            var estado = $(button).data('estado');
            var cidade = $(button).data('cidade');
            var sexo = $(button).data('sexo');

            $('#editClienteId').val(clienteId);
            $('#editNome').val(nome);
            $('#editCpf').val(cpf);
            $('#editDataNascimento').val(dataNascimento);
            $('#editEndereco').val(endereco);
            $('#editEstado').val(estado);
            $('#editCidade').val(cidade);
            $('#editSexo').val(sexo);

            $('#editClienteModal').modal('show');
        }

        function saveEditCliente() {
            // Aqui você pode implementar a lógica para salvar as alterações do cliente
        }
    </script>
</body>
</html>
